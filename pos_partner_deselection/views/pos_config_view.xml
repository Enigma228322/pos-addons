<odoo>

<record id="pos_config_view_form" model="ir.ui.view">
    <field name="name">pos.config.form</field>
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//h2[@name='order']/following::div[hasclass('row','mt16','o_settings_container')]/div[3]" position="after">
            <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="customer_deselection_interval"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Customer deselection interval (sec)"/>
                        <div class="text-muted">
                            Deselectes the customers after the setted time
                        </div>
                    </div>
                </div>
        </xpath>
    </field>
</record>

</odoo>
